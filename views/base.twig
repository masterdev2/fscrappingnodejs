<html>
    <head>
        <title>Free Films</title>
    </head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <body>
        <div class="container">
            <div class="row">
                <a href="/">Home</a>
                <form class="form-inline" method="post" action="/film/search{% if categ_id is defined and categ_id %}?categ_id={{categ_id}}{% endif %}">
                    <div class="form-group mb-2">
                        <input required  type="text" class="form-control-plaintext" id="staticEmail2" name="query" placeholder="Ex: Tenet...">
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">Search</button>
                </form>
            </div>
            <div class="row">
                <div class="col-md-8 row">
                    {% block content %}
                        <h2>{{show.nom}}</h2>
                        <img style="width: 100%;" src="{{show.image}}">
                        <a class="btn btn-success" target="_blank" href="/player/{{show.id}}">Play</a>
                    {% endblock %}
                </div>
                <div class="col-md-4">
                    <a class="col-sm-6" href="/categorie/1">us</a>
                    <a class="col-sm-6" href="/categorie/2">arab</a>
                    <a class="col-sm-6" href="/categorie/3">eg</a>
                    <a class="col-sm-6" href="/categorie/4">korean</a>
                    <a class="col-sm-6" href="/categorie/5">japanese</a>
                    <a class="col-sm-6" href="/categorie/6">action</a>
                    <a class="col-sm-6" href="/categorie/7">horror</a>
                    <a class="col-sm-6" href="/categorie/8">romance</a>
                    <a class="col-sm-6" href="/categorie/9">comedy</a>
                    <a class="col-sm-6" href="/categorie/10">scifi</a>
                    <a class="col-sm-6" href="/categorie/11">animation</a>
                    <a class="col-sm-6" href="/categorie/12">documentary</a>
                    <a class="col-sm-6" href="/categorie/13">war</a>
                </div>
            </div>
        </div>
        <footer>
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
        </footer>
    </body>
</html>